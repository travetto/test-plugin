{
  "name": "travetto-test-plugin",
  "displayName": "Travetto Test Plugin",
  "description": "VS Code plugin for running interactive testing with the travetto framework ",
  "version": "0.7.12",
  "homepage": "https://travetto.io",
  "keywords": [
    "vscode",
    "real-time feedback",
    "unit-testing",
    "travetto",
    "typescript"
  ],
  "publisher": "arcsine",
  "author": {
    "email": "travetto.framework@gmail.com",
    "name": "Travetto Framework"
  },
  "repository": {
    "url": "https://github.com/travetto/test-plugin.git"
  },
  "engines": {
    "vscode": "^1.28.2"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "files": [
    "src/"
  ],
  "devDependencies": {
    "@types/node": "^10.12.3",
    "vscode": "^1.1.21"
  },
  "dependencies": {
    "@types/diff": "^3.5.2",
    "@types/generic-pool": "^3.1.5",
    "diff": "^3.5.0",
    "generic-pool": "^3.4.2",
    "typescript": "^3.0.0",
    "util.promisify": "^1.0.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onCommand:extension.triggerDebug",
    "onCommand:extension.triggerDebugKey",
    "workspaceContains:**/node_modules/@travetto/test"
  ],
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#c6cdd3",
    "theme": "light"
  },
  "contributes": {
    "configuration": {
      "title": "@travetto/test",
      "properties": {
        "travetto.test.location": {
          "type": "string",
          "default": "",
          "description": "Override the default lookup location for @travetto/test module"
        }
      }
    },
    "debuggers": [
      {
        "type": "node",
        "label": "Travetto App Debug",
        "program": "${workspaceFolder}/node_modules/@travetto/test/bin/travetto-cli-test",
        "runtime": "node",
        "languages": [
          "typescript"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "env.TRV_APP_NAME"
            ],
            "properties": {
              "env.TRV_APP_NAME": {
                "type": "string",
                "description": "The app to debug."
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "node",
            "request": "launch",
            "name": "Launch Travetto via Node",
            "program": "${workspaceFolder}/node_modules/@travetto/base/bin/bootstrap",
            "cwd": "${workspaceFolder}",
            "skipFiles": [
              "<node_internals>/**",
              "**/@travetto/context/**/*",
              "**/@travetto/base/**/stacktrace.*",
              "**/@travetto/compiler/**/proxy.*",
              "**/node_modules/cls-hooked/**/*",
              "**/node_modules/trace/**/*",
              "**/node_modules/stack-chain/**/*"
            ]
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "extension.triggerDebug",
        "title": "Debug @Tests",
        "category": "travetto"
      }
    ],
    "keybindings": [
      {
        "command": "extension.triggerDebugKey",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "resourceLangId == typescript && editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == typescript && editorTextFocus",
          "command": "extension.triggerDebug",
          "group": "travetto"
        }
      ],
      "commandPalette": [
        {
          "when": "resourceLangId == typescript && editorTextFocus",
          "command": "extension.triggerDebug",
          "group": "travetto"
        }
      ]
    }
  }
}