// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "${workspaceRoot}/../../travetto/module/app"
      ],
      "env": {
        "DEBUG": "0",
        "TRV_DEV": "1",
        "TRV_LOG_TIME": "ms",
        "NODE_PRESERVE_SYMLINKS": "1"
      },
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/out/src/**/*.js"
      ],
      "preLaunchTask": "npm",
      "skipFiles": [
        "<node_internals>/**",
        "**/@travetto/context/**/*"
      ]
    },
    {
      "name": "Launch Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--extensionTestsPath=${workspaceRoot}/out/test"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/out/test/**/*.js"
      ],
      "preLaunchTask": "npm"
    }
  ]
}